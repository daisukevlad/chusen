rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 管理者かどうかを判別する関数
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'largeintro@gmail.com';
    }

    match /campaigns/{campaignId} {
      // 企画一覧と詳細は誰でも読み取り可能
      allow read: if true;
      
      // 作成と削除は管理者のみ
      allow create, delete: if isAdmin();
      
      // 応募（entryCountの更新）はログインユーザーなら許可
      allow update: if isAdmin() || (request.auth != null);

      match /entries/{entryId} {
        // 自分のデータ（IDが一致するデータ）か、管理者だけが読み書きできる
        allow read, write: if isAdmin() || (request.auth != null && entryId == request.auth.uid);
      }
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email in [
               'largeintro@gmail.com'  // Admin email
             ];
    }
    
    // Campaigns collection
    match /campaigns/{campaignId} {
      // Anyone can read campaigns
      allow read: if true;
      
      // Only admins can create, update, or delete campaigns
      allow create, update, delete: if isAdmin();
      
      // Entries subcollection
      match /entries/{entryId} {
        // Authenticated users can read all entries (needed for counting)
        // Admins can read all entries (needed for viewing)
        allow read: if isAuthenticated();
        
        // Users can create entries (with validation)
        allow create: if isAuthenticated() && 
                        request.auth.uid == request.resource.data.userId &&
                        request.resource.data.keys().hasAll([
                          'userId', 'email', 'fullName', 'phoneNumber', 
                          'postalCode', 'address', 'createdAt'
                        ]);
        
        // Only admins can update entries (for marking winners)
        allow update: if isAdmin();
        
        // No one can delete entries
        allow delete: if false;
      }
    }
  }
}
